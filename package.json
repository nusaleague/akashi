{
  "name": "akashi",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon server.js",
    "dev:files": "hs .dev/files -p ${PORT:-3001}",
    "knex": "knex",
    "lint": "xo",
    "format": "prettier --write **/*"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@tkesgar/chihiro": "^1.0.0",
    "@tkesgar/haru": "^2.0.2",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "glob": "^7.1.5",
    "helmet": "^3.21.2",
    "knex": "^0.20.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "ow": "^0.14.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pino": "^5.13.5",
    "pino-pretty": "^3.2.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "http-server": "^0.11.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.5.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "xo": "^0.25.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "prettier --write",
      "git add"
    ],
    "*.{md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "semicolon": "true",
    "space": "2",
    "overrides": [
      {
        "files": "migrations/**",
        "rules": {
          "unicorn/filename-case": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2
  }
}
